{
  "name": "greet",
  "displayName": "Greet",
  "publisher": "Mantra Coding",
  "description": "Linguistic antipattern detector for Python code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "icon": "icon/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/xrenegade100/greet-vscode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "statusbar": [
      {
        "id": "greet.install",
        "alignment": "right",
        "priority": 100,
        "text": ""
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.4.0"
  }
}
